<div class="recipe-card">
    @if (!string.IsNullOrEmpty(ImageUrl))
    {
        <img src="@ImageUrl" alt="@Title" class="recipe-image" />
    }

    <h3>@Title</h3>

    <p>@Description</p>

    @if (ShowSaveButton)
    {
        <button class="save-btn" @onclick="OnSaveClicked">Save ❤️</button>
    }

    @if (ShowEditButtons)
    {
        <button class="edit-btn" @onclick="OnEditClicked">Edit ✏️</button>
        <button class="delete-btn" @onclick="OnDeleteClicked">Delete 🗑️</button>
    }
</div>

@code {
    [Parameter] public string? Title { get; set; }
    [Parameter] public string? Description { get; set; }
    [Parameter] public string? ImageUrl { get; set; }

    [Parameter] public bool ShowSaveButton { get; set; } = false;
    [Parameter] public bool ShowEditButtons { get; set; } = false;

    [Parameter] public EventCallback OnSaveClicked { get; set; }
    [Parameter] public EventCallback OnEditClicked { get; set; }
    [Parameter] public EventCallback OnDeleteClicked { get; set; }
}
