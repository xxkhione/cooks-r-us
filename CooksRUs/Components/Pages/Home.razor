@using CooksRUs.Shared

@page "/"

<PageTitle>Home</PageTitle>

<header>
    <h1>Welcome to Cooks R Us! 🧑‍🍳</h1>
    <p>Browse, save, upload — recipes for everyone.</p>
</header>

<h2>Your Saved Recipes ⭐</h2>

@if(savedRecipes.Count == 0)
{
    <p>You haven't saved anything yet — go explore!</p>
}
else
{
    <div class="container">
        @foreach(var recipe in savedRecipes)
        {
            <RecipeCard Title="@recipe.Title" Description="@recipe.Description" ImageURL="@recipe.Image"
                        ShowEditControls="false" ShowSaveButton="false" />
        }
    </div>
}

<h2>Featured Recommendations 🔥</h2>

<div class="container">
    @foreach(var rec in featuredRecipes)
    {
        <RecipeCard Title="@rec.Title" Description="@rec.Description" ImageURL="@rec.Image"
                    ShowSaveButton="true" OnSave="() => SaveRecipe(rec)" />
    }
</div>

@code {
    List<Recipe> savedRecipes = new();          // backend will fill these
    List<Recipe> featuredRecipes = new();       // showcase random recipes

    void SaveRecipe(Recipe r){
        savedRecipes.Add(r); // backend integration later
    }

    class Recipe{
        public string? Title { get; set; }
        public string? Description { get; set; }
        public string? Image { get; set; }
    }
}
